{
  "name": "auto_direct",
  "version": "1.0.0",
  "description": "auto-direct",
  "main": "./src/server.js",
  "scripts": {
    "prebuild": "rimraf dist/",
    "build": "npx tsc -p tsconfig.build.json",
    "start": " node dist/server.js",
    "start:dev": "npm-run-all build start",
    "check": "npx tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "debug": "nodemon --watch '*.ts' --exec 'node -r ts-node/register --env-file=.env' ./src/server.ts",
    "test": "jest --config jest.config.js --coverage",
    "typeorm": "npx typeorm -d dist/core/appDatasource.js",
    "migration:run": "npm-run-all build \"typeorm -- migration:run \"",
    "migration:revert": "npm-run-all build \"typeorm -- migration:revert ./src \"",
    "migration:generate": "npm-run-all build \"typeorm -- migration:generate src/models/migrations/m \"",
    "migration:create": "npx typeorm migration:create src/models/migrations/m",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
      "eslint . --fix",
      "git add ."
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MahyarGdz/auto_direct.git"
  },
  "keywords": [
    "instagram",
    "direct",
    "facebook"
  ],
  "author": "Mahyar,Abolfazl",
  "license": "",
  "bugs": {
    "url": "https://github.com/MahyarGdz/auto_direct/issues"
  },
  "homepage": "https://github.com/MahyarGdz/auto_direct#readme",
  "dependencies": {
    "axios": "^1.6.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "inversify": "^6.0.2",
    "inversify-express-utils": "^6.4.6",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.25",
    "@types/passport": "^1.0.16",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-jwt": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
